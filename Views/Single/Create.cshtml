@model LAB01_ED1_G.Models.equipo

@{
    ViewData["Title"] = "Agregar equipo";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lato&family=Lora:wght@500&family=Noto+Serif&family=Quicksand:wght@500&display=swap" rel="stylesheet">

<body>
    <style>
        body {
            background-image: url('https://i.postimg.cc/tCVmZcxw/Dise-o-sin-t-tulo.png');
            background-repeat: no-repeat;
            background-size: 2000px;
        }
    </style>
    <div class="card">
        <img class="card-img" src='https://i.postimg.cc/bYGDxWj9/Nuevo-equipo-1.png' border='0' alt='Inscribir equipo'>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NombreEquipo" value="Nombre de equipo" class="control-label"></label>
                    <input asp-for="NombreEquipo" class="form-control" />
                    <span asp-validation-for="NombreEquipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Coach" value="Coach" class="control-label"></label>
                    <input asp-for="Coach" class="form-control" />
                    <span asp-validation-for="Coach" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Liga" value="Liga" class="control-label"></label>
                    <input asp-for="Liga" class="form-control" />
                    <span asp-validation-for="Liga" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaCreacion" class="control-label"></label>
                    <input asp-for="FechaCreacion" class="form-control" />
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Agregar" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div>
        <a asp-action="Index" style="color: #692128">Regresar a lista</a>
    </div>

</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
