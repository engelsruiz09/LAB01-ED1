@model IEnumerable<LAB01_ED1_G.Models.equipo>

@{
    ViewData["Title"] = "Create";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lato&family=Lora:wght@500&family=Noto+Serif&family=Quicksand:wght@500&display=swap" rel="stylesheet">

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="file" name="postedFile" />
    <input type="submit" value="Import" />
</form>
<br />
<form asp-action="Log">
    <label>Medición de tiempos:</label>
    <input type="submit" value="Imprimir" />
</form>
<br />
<p>
    Buscar por: <a asp-action="SearchN">Nombre Equipo</a>  |  <a asp-action="SearchC">Coach</a>  |  <a asp-action="SearchL">Liga</a>  |  <a asp-action="SearchF">Fecha Creacion</a>
</p>
<p>
    <a asp-action="Create" style="color:red">Nuevo equipo</a>

</p>
<body> 
    <style>
        body {
            background-image: url('https://i.postimg.cc/tCVmZcxw/Dise-o-sin-t-tulo.png');
            background-repeat: no-repeat;
            background-size: 2000px;
        }
    </style>
    <div class="card">
        <img class="card-img" src='https://i.postimg.cc/HsH8CD3t/Equipos-inscritos.png' border='0' alt='Equipos-inscritos'>
    </div>
    <br />
    <table class="table" style="color: #4D3952">
        <thead>
            <tr>
                <th>Nombre del Equipo</th>
                <th>Coach</th>
                <th>Liga</th>
                <th>Fecha de creación</th>
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreEquipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coach)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Liga)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreacion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>